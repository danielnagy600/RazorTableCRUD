
@model IEnumerable<CarWebApplication.Models.CarModel>
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gyakorlati teszt</h2>
<a asp-action="Create"><h6>Elem hozzáadása</h6></a>
<div>
    <form asp-action="Index" method="get">
        <div>
            <p>
                <input type="text" name="searchString" value="" />
                <input type="submit" value="Keresés" class="btn-primary"/>
            </p>
        </div>
    </form>
    
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
               <a asp-action="Index" asp-route-sortOrder="@ViewBag.CompanySortParam"> @Html.DisplayNameFor(model => model.CompanyName) </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.ModelSortParam">@Html.DisplayNameFor(model => model.ModelName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.FuelTypeSortParam">@Html.DisplayNameFor(model => model.FuelType)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PriceSortParam">@Html.DisplayNameFor(model => model.Price)</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ModelID">Szerkesztés</a>
                <a asp-action="Details" asp-route-id="@item.ModelID">Részletek</a>
                <a asp-action="Delete" asp-route-id="@item.ModelID">Törlés</a>
            </td>
        </tr>
        }
    </tbody>
</table>

